quantidade_rodas = int(input(" Quantas rodas tem o veículo?\n"))
peso_bruto = float(input(" Qual o peso do veículo?\n"))
quantidade_pessoas = int(input(" Qual a capacidade de pessoas do veículo?\n"))

if quantidade_rodas >=2 and quantidade_rodas<4 and quantidade_pessoas <=2:
  print(" Habilitação tipo A")
elif quantidade_rodas ==4 and quantidade_pessoas <=8 and peso_bruto <=3500:
  print(" Habilitação tipo B")
elif quantidade_rodas >=4 and peso_bruto >=3500 and peso_bruto >=6500:
  print(" Habilitação tipo C")
elif quantidade_rodas >=4 and quantidade_pessoas >8:
  print(" Habilitação tipo D")
elif quantidade_rodas >=4 and peso_bruto >=6000:
  print(" Habilitação tipo E")

else:
  print(" Fora dos padrões brasileiro de habilitação")
